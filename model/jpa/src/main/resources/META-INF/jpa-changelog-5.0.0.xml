<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="stickelm@gmail.com" id="5.0.0-invitation-support">
        <addColumn tableName="REALM">
            <column name="INVITATION" type="VARCHAR(32)" defaultValue="disabled">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="5.0.0-invitation-entity" author="stickelm@gmail.com">
        <createTable tableName="INVITATION_ENTITY">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="INVITEE_EMAIL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="INVITATION_TOKEN" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DATE_SENT" type="BIGINT" />
            <column name="USED" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>